<div class="page-header">
  <h1>Organizations</h1>
</div>

<% if @orgs.count.zero? %>

<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Repositories</th>
        <th>Members</th>
        <th>Findings</th>
        <th>Creation date</th>
        <th style="text-align:right">Operations</th>
      </tr>
    </thead>
    <tbody>
      <% @orgs.each do |org| %>
        <tr>
          <td>
          <img src="<%=h org.avatar_url %>" alt="<%=h org.name %>" class="avatar" width="24" height="24" />
          <strong><a href="/orgs/<%=h org.id%>"><%=h org.name %></a></strong></td>
          <td><%=h org.repos.count %></td>
          <td><%=h org.users.count %></td>
          <td><%=h org.findings.count %></td>
          <td><%= org.created_at.strftime("%e %b %Y %H:%M") %></td>
          <td style="text-align:right">
            <button class="updateorg" id="<%=h org.id %>" style="background-color:#00AAFF; border:0; color:white">Update</button>
            <button class="deleteorg" id="<%=h org.id %>" style="background-color:#C72525; border:0; color:white">Delete</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
