# EditorConfig
# editorconfig.org


[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.{toml,yml,yaml}]
indent_size = 2

[{Makefile, makefile, GNUmakefile}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
